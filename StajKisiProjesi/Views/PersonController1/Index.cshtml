@using EntityLayer.Concrete
@model List<Persons>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Person List</h1>

<table class="table table-bordered"> 
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Email</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Email</td>

        </tr>
    }
</table>
<a href="/PersonController1/AddPerson" class="btn btn-outline-info">Add New Person</a>